@model LessonViewModel
<div class="card h-100" style="width:350px; height:200px">
	<!-- Sale badge-->
	<div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
	<!-- Lesson image-->
	<a asp-area="" asp-controller="Tutoring" asp-action="LessonDetails" asp-route-url="@Model.Url">
		<img src="~/images/lessons/1.jpg" class="card-img-top" style="width:348px; height:200px" />
	</a>
	</a>
	<!-- Lesson details-->
	<div class="card-body">
		<div class="text-center">
			<!-- Product name-->
			<h5 class="card-title">@Model.Name</h5>
			<h4>@($"{Model.Price:C0}")</h4>
		</div>
	</div>
	<!-- Lesson actions-->
	<div class="d-flex justify-content-center m-1">
		<form asp-area="" asp-controller="Cart" asp-action="AddToCart" method="post">
			<input type="hidden" asp-for="Id" />
			<button type="submit" class="btn btn-outline-dark">Sepete Ekle</button>
			<input class="form-control d-inline" style="width:60px;" type="number" name="amount" min="1" max="9"
				value="1" />
		</form>
	</div>
</div>
